<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="What's the capital of Ukraine?"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="@color/navy_blue"

        />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Kyiv"
        android:textAlignment="center"
        android:textColor="@color/navy_blue"
        android:textSize="40sp"
        android:visibility="invisible"

        />

    <ImageView
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/add_card_button"
        android:layout_marginTop="500sp"
        android:layout_marginLeft="300sp"
        android:src="@drawable/ic_iconmonstr_plus_5" />



</RelativeLayout>